{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.nirholas/crypto-market-data",
  "title": "Crypto Market Data MCP",
  "description": "Real-time crypto prices, OHLCV, DeFi TVL, yields, stablecoins - Bitcoin, Ethereum, 10000+ tokens via CoinGecko and DeFiLlama APIs",
  "license": "MIT",
  "authors": [
    {
      "name": "nich",
      "url": "https://github.com/nirholas"
    }
  ],
  "repository": {
    "url": "https://github.com/nirholas/crypto-market-data",
    "source": "github"
  },
  "version": "1.0.0",
  "links": {
    "homepage": "https://nirholas.github.io/crypto-market-data",
    "bugs": "https://github.com/nirholas/crypto-market-data/issues"
  },
  "icons": [
    {
      "url": "https://raw.githubusercontent.com/nirholas/g1t/d9a0ee206b8136472c04384905999369f198b3c9/milady.svg",
      "type": "svg"
    }
  ],
  "packages": [
    {
      "registryType": "npm",
      "identifier": "crypto-market-data-mcp",
      "version": "1.0.0",
      "runtimeHint": "npx",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "name": "COINGECKO_API_KEY",
          "description": "CoinGecko Pro API key for higher rate limits (optional)",
          "isRequired": false,
          "isSecret": true
        }
      ]
    }
  ],
  "_meta": {
    "io.modelcontextprotocol.registry/publisher-provided": {
      "keywords": ["crypto", "market-data", "prices", "ohlcv", "orderbook", "bitcoin", "ethereum", "defi", "tvl", "coingecko", "defillama", "yields", "stablecoins", "mcp", "ai"],
      "category": "Market Data"
    }
  }
}
